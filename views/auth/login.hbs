<div id="login-wrapper">
  <div class="form-header">
    <h1 class="form-title">Welcome Back {{user.name}} !</h1>
  </div>
  <p class="form-sub-infos">Don't have an account yet ? <a href="/signup" class="button-link-signup">Sign Up</a></p>


  <div class="login-form-frame">
    <div class="login-form-container">
      <form method="post" action="/login" id="login_form">
        <div class="login-form-content">

          <label for="email">Email</label>
          <input type="email" name="email" class="input" placeholder="beber@noob.com">

          <label for="password">Password</label>
          <input type="password" name="password" class="input" placeholder="••••••">

          {{#if errorMessage}}
          <div class="error-message">{{ errorMessage }}</div>
          {{/if}}
          <button class="btn-login">Log in</button>
        </div>
      </form>

    </div>
  </div>
</div>